$(function(){
  baseInfoReview();
  $('#spot-pinyin,#spot-telephone,#spot-address,#spot-ticket-price,#spot-open-time').keyup(function(){
    baseInfoReview();
  });
  $('#effect').click(function(){
    effectReview();
    $('#description').keyup(function(){
      effectReview();
    });
  });
  //基本信息预览
  $('#baseinfo').click(function(){
    baseInfoReview();
  });
  //简介预览
  $('#intro').click(function(){
    introReview();
    $('#intro-title').keyup(function(){
      introReview();
    });
  });
  //创建子景点预览
  $('#childview').click(function(){
    childviewReview();
    $('#childview-name,#childview-title').keyup(function(){
      childviewReview();
    });
  });
  //创建附录预览
  $('#appendix').click(function(){
    appendixReview();
    $('#appendix_title').keyup(function(){
      appendixReview();
    });
    $('#appendix-box').delegate('.textbox','keyup',function(){
      appendixReview();
    });
  });
  
  //修改子景点预览
  $('#childview-list').delegate('.childview_list','click',function(){
    updateChildReview();
    $('#childview-update-title').keyup(function(){
      updateChildReview();
    });
    $('#childview-update-box').delegate('.textbox','keyup',function(){
      appendixReview();
    });
  });
  
  //修改子景点里面的附录预览
  $('#childview-list').delegate('.appendix_list','click',function(){
    updateAppendixReview();
    $('#appendix_update_title').keyup(function(){
      updateAppendixReview();
    });
    $('#appendix_update-box').delegate('.textbox','keyup',function(){
      updateAppendixReview();
    });
  });
  
  //修改附录预览
  $('#appendix-list').delegate('.secend-list','click',function(){
    updateAppendixReview();
    $('#appendix_update_title').keyup(function(){
      updateAppendixReview();
    });
    $('#appendix_update-box').delegate('.textbox','keyup',function(){
      updateAppendixReview();
    });
  });
});